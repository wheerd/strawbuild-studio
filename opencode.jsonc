{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "plugin": [],
  "permission": {
    "edit": "allow",
    "bash": {
      "git *": "ask",
      "git status*": "allow",
      "git diff*": "allow",
      "rm -rf *": "ask",
      "pnpm *": "ask",
      "npm": "deny",
      "pnpm test*": "allow",
      "pnpm lint*": "allow",
      "pnpm format:check": "allow",
      "pnpm dev": "allow",
      "pnpm build": "allow",
      "pnpm typecheck*": "allow",
      "pnpm i18n:*": "allow",
      "npx tsc *": "allow",
      "rg *": "allow"
    }
  }
}
