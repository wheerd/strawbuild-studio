{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,

  "permission": {
    "edit": "allow",
    "bash": {
      "git *": "ask",
      "git status": "allow",
      "git diff": "allow",
      "rm -rf *": "ask",
      "pnpm *": "ask",
      "npm": "deny",
      "pnpm test": "allow",
      "pnpm test *": "allow",
      "pnpm lint": "allow",
      "pnpm lint:format": "allow",
      "pnpm dev": "allow",
      "pnpm build": "allow",
      "pnpm typecheck": "allow",
      "npx tsc *": "allow",
      "rg *": "allow"
    }
  }
}
